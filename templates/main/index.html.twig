{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}
	<div class="products">
		{% for product in products %}
			<div class="product">
				<div class="Name">
					<span>
						<strong>Название товара:
						</strong>
					</span>
					<a href="{{path('productInfo',{id: product.id})}}">{{product.name}}</a>
				</div>
				<div class="Description">
					<span>
						<strong>Описание:
						</strong>
					</span>
					<span>{{product.description}}</span>
				</div>
				<div class="DateTime">
					<span>
						<strong>Время добавления:
						</strong>
					</span>
					<span>{{product.date|date('Y-m-d')}}</span>
				</div>
				<div class="Rate">
					<span>
						<strong>Рейтинг:
						</strong>
					</span>
					<span>
						<strong>{{product.rate|round(1,'floor')}}</strong>
					</span>
				</div>
				<div class="RateCount">
					<span>
						<strong>Количество отзывов:
						</strong>
					</span>
					<span>
						<strong>{{product.rateCount}}</strong>
					</span>
				</div>
				<div class="Remake">
				{% if is_granted('ROLE_ADMIN') %}			
					<a href="{{path('edit_product',{id: product.id})}}" class="btn btn-danger">Изменить</a>
				{% endif %}
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}

